<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zahi.themovieapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.zahi.themovieapp.App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_main_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheMovieApp"
        android:dataExtractionRules="@xml/data_extraction_rules">
        <activity
            android:name="com.zahi.themovieapp.presentation.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.TheMovieApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zahi.themovieapp.presentation.main.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.TheMovieApp" />
    </application>

</manifest>