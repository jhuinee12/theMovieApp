<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.tmp.themovieapp.presentation.movielist.MovieListFragment"
        android:label="영화 목록"
        tools:layout="@layout/fragment_movie_list">
        <action
            android:id="@+id/actionMovieListToMovieDetail"
            app:destination="@id/movieDetailFragment"
            app:popUpTo="@id/movieListFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.tmp.themovieapp.presentation.moviedetail.MovieDetailFragment"
        android:label="영화 상세 정보"
        tools:layout="@layout/fragment_movie_detail">
        <argument
            android:name="detail"
            app:argType="com.tmp.themovieapp.entity.MovieInfo[]"
            />
        <action
            android:id="@+id/actionMovieDetailToActorDetail"
            app:destination="@id/actorDetailFragment"
            app:popUpTo="@id/movieDetailFragment"/>

    </fragment>
    <fragment
        android:id="@+id/actorDetailFragment"
        android:name="com.tmp.themovieapp.presentation.actordetail.ActorDetailFragment"
        android:label="배우 상세 정보"
        tools:layout="@layout/fragment_actor_detail">

        <argument
            android:name="detail"
            app:argType="com.tmp.themovieapp.entity.ActorInfo[]"
            />
        <action
            android:id="@+id/action_actorDetailFragment_to_movieDetailFragment"
            app:popUpTo="@id/movieDetailFragment" />

    </fragment>
</navigation>